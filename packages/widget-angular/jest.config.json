{
  "fakeTimers": {
    "enableGlobally": true
  },
  "maxWorkers": "25%",
  "preset": "jest-preset-angular",
  "testEnvironment": "jsdom",
  "testMatch": [
    "**/__tests__/*.spec.[jt]s?(x)"
  ],
  "coveragePathIgnorePatterns": [
    "node_modules",
    "__tests__"
  ],
  "setupFilesAfterEnv": [
    "./jest.setup.js"
  ],
  "transformIgnorePatterns": [
    "node_modules/(?!@ngrx|(?!deck.gl)|ng-dynamic)"
  ],
  "coverageReporters": [
    "text"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  }
}
